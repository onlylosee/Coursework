<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ScheduleFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:theme="@style/tvStyle"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/shapebut"
                android:text="ПН"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/shapebut"
                android:text="ВТ"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but3"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/shapebut"
                android:text="СР"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but4"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/shapebut"
                android:text="ЧТ"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but5"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/shapebut"
                android:text="ПТ"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/but6"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/shapebut"
                android:text="СБ"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:theme="@style/tvStyleWeeks"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/llDays">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/butWeek1"
                android:background="@drawable/shapebut"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="1 неделя"/>
            <TextView
                android:id="@+id/tvCurrentWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                                   "
                android:layout_marginHorizontal="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/butWeek2"
                android:textColor="@color/white"
                android:background="@drawable/shapebut"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="2 неделя"/>
        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="190dp"
            android:foregroundGravity="center"
            app:layout_constraintTop_toBottomOf="@+id/llWeek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <include
            layout="@layout/list_item"
            android:id="@+id/list_item"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>